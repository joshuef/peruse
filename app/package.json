{
  "name": "peruse",
  "productName": "Peruse",
  "version": "0.6.0",
  "description": "Electron application boilerplate based on React, React Router, Webpack, React Hot Loader for rapid application development",
  "main": "./main.js",
  "scripts": {
    "postinstall": "yarn run install-prod && node extensions/safe/install-dev-libs.js",
    "install-prod": "cross-env NODE_ENV=prod download_deps --package package.json",
    "install-mock": "cross-env NODE_ENV=dev download_deps --package package.json",
    "rebuild": "npm rebuild --runtime=electron --target=1.8.4 --disturl=https://atom.io/download/atom-shell --build-from-source"
  },
  "author": {
    "name": "Josh Wilson",
    "email": "joshuef@gmail.com",
    "url": "https://github.com/joshuef"
  },
  "license": "MIT",
  "dependencies": {
    "@maidsafe/safe-node-app": "git+https://github.com/maidsafe/safe_app_nodejs.git#fe5dc54aa9c8a1c5dd71809b616f4a2353b598e8",
    "cross-env": "5.1.3",
    "enum": "2.5.0",
    "ffi": "2.2.0",
    "react-icons": "2.2.7",
    "ref": "1.3.5",
    "ref-array": "1.2.0",
    "ref-struct": "1.1.0",
    "weak": "1.0.1"
  },
  "download_deps": {
    "system_uri": {
      "mirror": "https://s3.eu-west-2.amazonaws.com/system-uri",
      "version": "v0.4.0",
      "targetDir": "extensions/safe/dist/prod",
      "filePattern": "^.*\\.(dll|so|dylib)$"
    },
    "safe_authenticator": {
      "mirror": "https://s3.eu-west-2.amazonaws.com/safe-client-libs",
      "version": "v0.6.0",
      "targetDir": "extensions/safe/dist/prod",
      "filename": "safe_authenticator",
      "filePattern": "^.*\\.(dll|so|dylib)$",
      "force": true
    },
    "ENV": {
      "dev": {
        "safe_authenticator": {
          "targetDir": "extensions/safe/dist/mock",
          "filename": "safe_authenticator-mock"
        },
        "system_uri": {
          "targetDir": "extensions/safe/dist/mock"
        }
      }
    }
  },
  "devDependencies": {
    "deps_downloader": "https://s3.eu-west-2.amazonaws.com/deps-downloader/deps_downloader-0.1.0.tgz"
  }
}
